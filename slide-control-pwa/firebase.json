{
  "hosting": {
    "public": "build",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/robots.txt",
        "destination": "/assets/robots.txt"
      },
      {
        "source": "/.well-known/assetlinks.json",
        "destination": "/assets/assetlinks.json"
      },
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "/.well-known/assetlinks.json",
        "destination": "/assets/assetlinks.json"
      }
    ]
  }
}
